{
	"name": "web-node",
	"version": "1.0.0",
	"description": "Node for Web",
	"private": false,
	"author": "debugcode",
	"license": "ISC",
	"scripts": {
		"api": "cross-env NODE_ENV=development PORT=10091 nodemon --watch src --ignore src/web.server.js --ignore 'src/assets/uploaded/*' src/api.server.js",
		"web": "cross-env NODE_ENV=development PORT=10092 nodemon --watch src --ignore src/api.server.js --ignore 'src/assets/uploaded/*' src/web.server.js",
		"niapi": "cross-env NODE_ENV=development PORT=10093 nodemon --watch src --ignore src/web.server.js --ignore 'src/assets/uploaded/*' --inspect src/api.server.js",
		"niweb": "cross-env NODE_ENV=development PORT=10094 nodemon --watch src --ignore src/api.server.js --ignore 'src/assets/uploaded/*' --inspect src/web.server.js",
		"pdev": "pm2 startOrRestart ecosystem.config.js --only 'web-development, api-development' --env development",
		"ptest": "pm2 startOrRestart ecosystem.config.js --only 'web-test, api-test' --env test",
		"pstart": "pm2 startOrRestart ecosystem.config.js --only 'web-production, api-production' --env production",
		"build": "cross-env NODE_ENV=production webpack --config .webpack.js"
	},
	"dependencies": {
		"@elastic/elasticsearch": "^8.0.0",
		"amqplib": "^0.8.0",
		"axios": ">=0.21.2",
		"cookies": "^0.8.0",
		"he": "^1.2.0",
		"http-errors": "^1.7.3",
		"iconv-lite": "^0.5.1",
		"influx": "^5.9.3",
		"koa": "^2.12.0",
		"koa-body": "^4.1.3",
		"koa-morgan": "^1.0.1",
		"koa-router": "^10.0.0",
		"koa-static": "^5.0.0",
		"koa2-cors": "^2.0.6",
		"log4js": "^6.3.0",
		"mongoose": "^5.9.18",
		"mysql2": "^2.1.0",
		"needle": "^2.5.0",
		"nunjucks": "^3.2.1",
		"redis": "^4.0.3",
		"sequelize": "^6.17.0",
		"socket.io": "^4.3.1",
		"uuid": "^8.1.0",
		"ws": "^7.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.13.15",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"babel-loader": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.14.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.26.1",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"nodemon": "^2.0.15",
		"prettier": "2.6.2",
		"webpack": "^5.33.2",
		"webpack-cli": "^4.6.0",
		"webpack-node-externals": "^2.5.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --write --ignore-unknown",
			"eslint --fix",
			"git add"
		]
	},
	"nodemonConfig": {
		"verbose": true,
		"delay": 1000
	},
	"babel": {
		"presets": [
			"env",
			"stage-3",
			"es2017"
		]
	}
}
