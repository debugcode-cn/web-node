{
  "name": "web-node",
  "version": "1.0.0",
  "description": "koa2-demo",
  "private": false,
  "scripts": {
    "prod": "pm2 startOrRestart pm2-dist.json",
    "beta": "pm2 startOrRestart pm2-beta.json --env beta",
    "dev": "pm2 startOrRestart pm2-dev.json --env dev",
    "dev-api": "nodemon --watch src --ignore src/web.server.js src/api.server.js",
    "inspect-api": "nodemon --watch src --ignore src/web.server.js --inspect src/api.server.js",
    "dev-web": "nodemon --watch src --ignore src/api.server.js src/web.server.js",
    "inspect-web": "nodemon --watch src --ignore src/api.server.js --inspect src/web.server.js",
    "build": "webpack --config .webpack.js"
  },
  "author": "debugcode",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.8.0",
    "axios": ">=0.21.2",
    "cookies": "^0.8.0",
    "he": "^1.2.0",
    "http-errors": "^1.7.3",
    "iconv-lite": "^0.5.1",
    "koa": "^2.12.0",
    "koa-body": "^4.1.3",
    "koa-morgan": "^1.0.1",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "log4js": "^6.3.0",
    "mongoose": "^5.9.18",
    "mysql2": "^2.1.0",
    "needle": "^2.5.0",
    "nunjucks": "^3.2.1",
    "pm2": "^4.4.0",
    "redis": "^4.0.3",
    "sequelize": "^5.21.12",
    "socket.io": "^4.3.1",
    "uuid": "^8.1.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^2.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "build/*",
      "logs/*",
      "node_modules/*"
    ],
    "delay": 1000
  }
}
